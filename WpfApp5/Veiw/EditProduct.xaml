<Window x:Class="WpfApp5.Veiw.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5.Veiw"
        mc:Ignorable="d"
        Title="EditProduct" Height="450" Width="500">
    <Grid>


        <StackPanel Width="400">
            <Label HorizontalContentAlignment="Center" FontSize="45">Make</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="36" Text="{Binding product.Id}"></TextBox>

            <Label HorizontalContentAlignment="Center" FontSize="45">Model</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="36" Text="{Binding product.Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            <Label HorizontalContentAlignment="Center" FontSize="45">Year</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="36" Text="{Binding  product.Price, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            
            <Label HorizontalContentAlignment="Center" FontSize="45">Year</Label>
            <TextBox Foreground="DeepSkyBlue" FontSize="36" Text="{Binding product.DateTime ,UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </StackPanel>
    </Grid>
</Window>
